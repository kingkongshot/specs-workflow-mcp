  "errors": {
    "invalidPath": {
      "displayText": "‚ùå Error: Invalid specification directory\n\nPath ${path} does not exist or is not a valid specification directory.\nPlease ensure the path is correct and has been initialized.\n",
      "validation": {
        "isError": true,
        "contentContains": [
          "Error",
          "Invalid",
          "does not exist"
        ]
      }
    },
    "alreadyInitialized": {
      "displayText": "‚ùå Project already exists\n\nüìÅ Path: ${path}\nüìÑ Existing files: ${existingFiles}\n\nPlease choose one of the following actions:\n1. Delete existing files and reinitialize: rm -rf ${path}/*\n2. Initialize in a new directory: use a different path parameter\n3. Continue editing existing project: use action.type=\"check\" to check project status and read existing documents to see if adjustments are needed\n",
      "validation": {
        "isError": true,
        "contentContains": []
      }
    },
    "missingParameters": {
      "displayText": "‚ùå Error: Missing required parameters\n\n${action} operation requires the following parameters:\n${missingParams}\n\nPlease provide complete parameters and try again.\n",
      "validation": {
        "isError": true,
        "contentContains": [
          "Error",
          "required"
        ]
      }
    },
    "documentNotEdited": {
      "displayText": "‚ùå Error: Document not ready for confirmation\n\nüìÑ ${documentName} still contains template markers and has not been edited.\n\nThe document appears to be in its initial state with placeholder content.\nBefore confirming, you must edit the document and then use action.type=\"check\" to verify the document is ready.\n\nIf you want to skip writing this document:\n- Use action.type=\"skip\" to bypass this stage\n- Note: Skipping important documents may impact project quality\n",
      "validation": {
        "isError": true,
        "contentContains": [
          "Error"
        ]
      }
    }
  }
