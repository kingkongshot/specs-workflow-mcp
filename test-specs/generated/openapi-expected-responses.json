                "text": {
                  "type": "string",
                  "description": "Optional resource text content"
                }
              },
              "required": [
                "uri",
                "mimeType"
              ],
              "additionalProperties": true
            }
          }
        },
        "required": [
          "stage",
          "progress",
          "status",
          "displayText"
