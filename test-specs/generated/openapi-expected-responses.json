      "schema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "featureName": {
                "type": "string"
              },
              "nextAction": {
                "type": "string",
                "const": "edit_requirements"
              }
            },
            "required": [],
            "additionalProperties": true
          },
          "displayText": {
            "type": "string"
          },
          "resources": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "description": "Resource URI"
                },
                "title": {
                  "type": "string",
                  "description": "Optional resource title"
                },
                "mimeType": {
                  "type": "string",
                  "description": "Resource MIME type"
                },
                "text": {
                  "type": "string",
                  "description": "Optional resource text content"
                }
              },
              "required": [
                "uri",
                "mimeType"
